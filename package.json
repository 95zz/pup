{
  "name": "pup",
  "private": true,
  "scripts": {
    "start": "meteor --settings settings-development.json",
    "staging": "DEPLOY_HOSTNAME=us-east-1.galaxy-deploy.meteor.com meteor deploy <staging-subdomain>.meteorapp.com --settings settings-staging.json",
    "production": "DEPLOY_HOSTNAME=us-east-1.galaxy-deploy.meteor.com meteor deploy <production-subdomain>.meteorapp.com --settings settings-production.json",
    "lint:all": "eslint --fix .",
    "lint:file": "eslint --fix",
    "test": "jest"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.44",
    "@cleverbeagle/pupql": "0.0.3",
    "@cleverbeagle/seeder": "^1.3.1",
    "apollo-boost": "^0.1.14",
    "b64-to-blob": "^1.2.19",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^2.0.1",
    "commonmark": "^0.28.1",
    "core-js": "^2.5.5",
    "file-saver": "^1.3.8",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "handlebars": "^4.0.11",
    "isomorphic-fetch": "^2.2.1",
    "jquery": "2.2.4",
    "jquery-validation": "^1.17.0",
    "jszip": "^3.1.5",
    "juice": "^4.2.3",
    "lodash": "^4.17.5",
    "meteor-node-stubs": "^0.3.3",
    "moment": "^2.22.1",
    "moment-timezone": "^0.5.16",
    "node-fetch": "^2.2.0",
    "polished": "^1.9.2",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-apollo": "^2.1.11",
    "react-bootstrap": "^0.32.1",
    "react-dom": "^16.3.2",
    "react-helmet": "^5.2.0",
    "react-markdown": "^3.3.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-bootstrap": "^0.24.4",
    "react-router-dom": "^4.2.2",
    "redux": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "simpl-schema": "^1.5.0",
    "styled-components": "^3.2.6",
    "xml": "^1.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "babel-jest": "^22.4.3",
    "babel-plugin-lodash": "^3.3.2",
    "enzyme": "^3.3.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-meteor": "^0.4.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-meteor": "^4.2.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^22.4.3",
    "prettier": "1.14.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "babel",
      "meteor",
      "prettier",
      "react"
    ],
    "extends": [
      "airbnb",
      "plugin:prettier/recommended",
      "plugin:meteor/recommended",
      "plugin:react/recommended"
    ],
    "env": {
      "browser": true
    },
    "globals": {
      "expect": false
    },
    "overrides": [
      {
        "files": [
          "api/**/methods.js"
        ],
        "rules": {
          "consistent-return": 0
        }
      }
    ],
    "rules": {
      "arrow-parens": [
        2,
        "always"
      ],
      "import/no-unresolved": 0,
      "import/no-extraneous-dependencies": 0,
      "import/extensions": 0,
      "indent": 0,
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "to"
          ]
        }
      ],
      "max-len": 0,
      "no-alert": 0,
      "no-console": 0,
      "no-restricted-globals": 0,
      "no-return-assign": [
        "error",
        "except-parens"
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id",
            "_ensureIndex",
            "_verifyEmailToken",
            "_resetPasswordToken",
            "_name"
          ]
        }
      ],
      "class-methods-use-this": 0,
      "prettier/prettier": 2,
      "react/jsx-filename-extension": 0,
      "react/forbid-prop-types": 0
    },
    "settings": {
      "import/resolver": "meteor"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "./.githooks/pre-commit.sh"
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "rangeStart": 0,
    "rangeEnd": "Infinity",
    "parser": "babylon",
    "proseWrap": "preserve"
  },
  "version": "1.5.0",
  "description": "A boilerplate for products.",
  "main": "index.js",
  "repository": {
    "url": "git@cleverbeagle:cleverbeagle/pup.git",
    "type": "git"
  },
  "author": "cleverbeagle <ryan.glover@cleverbeagle.com>",
  "license": "MIT",
  "meteor": {
    "mainModule": {
      "client": "startup/client/index.js",
      "server": "startup/server/index.js"
    }
  }
}
